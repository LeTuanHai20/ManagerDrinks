@model HomeViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Header{
    <link href="~/css/List.css" rel="stylesheet" asp-append-version="true" />
}

<partial name="Carousel" />
<h2>Prefered drinks of the week </h2>
<h4>Clients preferences - just for you!</h4>

<div class="row">
    @foreach (var drink in Model.PreferredDrinks)
    {
        <partial name="DrinksSummary" model="drink" />
    }
</div>
