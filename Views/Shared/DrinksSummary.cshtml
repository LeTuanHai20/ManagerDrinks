@model Drink

<div class="col-sm-4 col-lg-4 col-md-4 mt-2" style="float:left;">
    <div class="img-thumbnail product">
        <img src="~/ImageThumbnailUrl/@Model.ImageThumbnailUrl" alt="Alternate Text" asp-append-version="true" width="320" height="200"/>
        <div class="caption">
            <h3 class="pull-right">@Model.Price.ToString("c")</h3>
            <h3>
                <a asp-action="detail" asp-controller="drink" asp-route-drinkId="@Model.DrinkId">@Model.Name</a>
            </h3>
            <p>@Model.ShortDescription</p>
        </div>
        <div class="addToCart text-right">
            <p class="button ">
                <a class="btn btn-success " id="cartButton" asp-controller="ShoppingCart" asp-action="AddToShoppingCart" asp-route-drinkId="@Model.DrinkId">
                    Add to cart
                </a>
            </p>
        </div>
    </div>
</div>
