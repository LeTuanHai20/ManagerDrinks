@model List<ListOrderViewModel>
@{
    ViewData["Title"] = "List Orders";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>List Orders</h1>
@if (Model.Any())
{
    <table class="table table-dark">
        <thead>
            <tr>
                <th scope="col">STT</th>
                <th scope="col">Email</th>
                <th scope="col">FullName</th>
                <th scope="col">PhoneNumber</th>
                <th scope="col">Address</th>
                <th scope="col">TotalPrice</th>
                <th scope="col">NoteToSalesMan</th>
                <th scope="col">OrderPlace</th>
                <th scope="col"></th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Count; i++)
            {
            <tr>
                <th scope="row">@i</th>
                <td>@Model[i].Email</td>
                <td>@Model[i].FullName</td>
                <td>@Model[i].PhoneNumber</td>
                <td>@Model[i].Address</td>
                <td>@Model[i].TotalPrice.ToString("c")</td>
                <td>@Model[i].NoteToSalesMan</td>
                <td>@Model[i].OrderPlace</td>
                <th scope="col"><a asp-action="WatchOrderDetail" asp-controller="order" class="text-center text-danger" asp-route-id="@Model[i].OrderId">Detail</a></th>
                <td>  <a asp-action="RemoveOrder" class="text-center text-danger" asp-route-id="@Model[i].OrderId">Remove</a></td>
            </tr>

            }

        </tbody>
    </table>
}
else
{
<p> There are no invoices</p>
}

