@model List<OrderDetailViewModel>
@{
    ViewData["Title"] = "Watch Order Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Watch Order Detail</h1>
@if (Model.Any())
{
    <table class="table table-dark">
        <thead>
            <tr>
                <th scope="col">STT</th>
                <th scope="col">DrinkID</th>
                <th scope="col">Amount</th>
                <th scope="col">Price</th>
               
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Count; i++)
            {
                <tr>
                    <th scope="row">@i</th>
                    <td>@Model[i].DrinkId</td>    
                    <td>@Model[i].Amount</td>
                    <td>@Model[i].Price.ToString("c")</td>
                   
                </tr>

            }

        </tbody>
    </table>
}
else
{
    <p> There are no detail of this order</p>
}

